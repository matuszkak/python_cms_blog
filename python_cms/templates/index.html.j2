{% extends 'base.html.j2' %}
{% block title %} Nyit√≥lap {% endblock %}


{% block content %}
  {% if posts|length == 0 %}
    <h1 class="no-posts">We have no posts to show</h1>
  {% endif %}

  {% for message in get_flashed_messages()  %}
   <div class="toast toast-information">
       <button class="btn btn-clear float-right"></button>
         {{message}}
   </div>
  {% endfor %}

<div class="columns">
  {% for post in posts %}
    <div class="column col-6 col-md-12">
      <div class="card article-card">
        <div class="card-image">
          {% if post.teaser_image == "" %}
            <img src="{{ url_for('static', filename='default.png') }}" class="img-responsive article-image-inner" alt="">
          {% else %}
          <img src="/files/{{post.teaser_image}}" class="img-responsive article-image-inner" alt="">
          {% endif %}

        </div>
        <div class="card-header">
          <div class="card-title h5">{{ post.title }}</div>
        </div>
        <div class="card-footer">
          <a class="btn btn-primary" href="/post/{{ post.id }}">Read More</a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}

{% block bodysource %}
 <script src="{{url_for('static', filename="index_toast.js")}}"></script>
{% endblock %}

